<%- include('includes/head.ejs') %>

<h1 class="tittle">MenÃº</h1>

<% if(privilegios.indexOf('crear_crepas') >= 0) { %>
    <a href="/crepas/nuevo" class="button is-link is-rounded">Registrar</a>
<% } %>

<br><br>

<% if (crepas.length > 0) { %>
    <div class="columns is-multiline">
        <% for (let crepas of crepas) { %>
            <div class="column is-3">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="<%= crepa.imagen %>" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                            <figure class="image is-48x48">
                                <img src="<%= crepa.imagen %>" alt="Placeholder image">
                            </figure>
                            </div>
                            <div class="media-content">
                            <p class="title is-4"><%= crepas.nombre %></p>
                            <p class="subtitle is-6"><%= crepas.handle %> $<%= crepas.precio %> </p>
                            </div>
                        </div>
                    
                        <div class="content">
                            <%= crepas.descripcion %> 
                            <br>
                            Ingredientes:
                            <br>
                            <%= crepas.ingredientes %> 
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>No hay crepas >:( </h1>
<% } %>   

<br><br>

<% if (ultima_crepas != '') { %>
    <div class="notification is-link is-light">
        La ultima crepa registrada fue: <%= ultima_crepas %>
    </div>
<% } %>

<a href="/crepas/nuevo" class="button is-link is-rounded">Registrar</a>

<%- include('includes/foot.ejs') %>
